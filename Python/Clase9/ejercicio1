# Clase padre
class Vehiculo:
    def __init__(self, color, ruedas):
        self.color = color
        self.ruedas = ruedas

    def __str__(self):
        return f"Color: {self.color}, Ruedas: {self.ruedas}"

# Clase hija
class Auto(Vehiculo):
    def __init__(self, color, ruedas, velocidad):
        super().__init__(color, ruedas)  # Llama al constructor de la clase padre
        self.velocidad = velocidad

    def __str__(self):
        return f"{super().__str__()}, Velocidad: {self.velocidad} km/h"

# Clase hija 
class Bicicleta(Vehiculo):
    def __init__(self, color, ruedas, tipo):
        super().__init__(color, ruedas)
        self.tipo = tipo

    def __str__(self):
        return f"{super().__str__()}, Tipo: {self.tipo}"

# Crear un objeto de cada clase
vehiculo1 = Vehiculo("Rojo", 4)
auto1 = Auto("Azul", 4, 180)
bicicleta1 = Bicicleta("Verde", 2, "Monta√±a")

# Mostrar los objetos
print(vehiculo1)
print(auto1)
print(bicicleta1)